<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_configuration_main_layout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Choose Your Preferences:"
        android:textSize="20dp"
        android:background="@color/userConfigColor"
        android:textStyle="bold"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="80">

    <CheckBox android:id="@+id/kosher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kosher"
        android:onClick="onCheckboxClicked" />
    <CheckBox android:id="@+id/sugar_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugar Free"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/lactose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lactose"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/vegan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegan"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meat"
        android:onClick="onCheckboxClicked"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Submit"
            android:id="@+id/submitCheckBoxPreference"
            android:background="@color/userConfigColor"
            android:onClick="onSubmitPreference"/>
    </LinearLayout>
</LinearLayout>